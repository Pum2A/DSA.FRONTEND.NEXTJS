{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "isolatedModules": true,
      "types": ["jest", "node", "@testing-library/jest-dom"],
      "paths": {
        "@/app/*": ["./app/*"],
        "@/components/*": ["./app/components/*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "__tests__/**/*.ts",
      "__tests__/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }